
@model List<Cart>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<main class="container py-5">
    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Create" class="btn btn-primary">Create</a>
    <div class="section-heading text-center py-3">

        <h1>Speakers</h1>
    </div>
    <div class="row g-4">
        @foreach (Cart item in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-sm border-0">
                    <a href="property-details.html">
                        <img src="~/assets/uploadedImages/@item.ImgUrl" class="card-img-top" alt="" style="height: 250px; object-fit: cover;">
                    </a>
                    <div class="card-body">
                        <span class="badge bg-primary mb-2"></span>
                        <h5 class="card-title text-dark">Name : @item.Name</h5>
                        <h6 class="card-subtitle mb-3 text-muted">Specialty : @item.Specialty</h6>   
                    </div>
                    <div class="card-footer bg-white border-0 text-center d-flex flex-column gap-2">
                        <a asp-area="Admin" asp-route-id="@item.Id" asp-controller="Dashboard" asp-action="Update" class="btn btn-primary">UPDATE</a>
                        <a asp-area="Admin" asp-route-id="@item.Id" asp-controller="Dashboard" asp-action="Delete" class="btn btn-danger">DELETE</a>
                    </div>
                </div>
            </div>

        }

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</main>