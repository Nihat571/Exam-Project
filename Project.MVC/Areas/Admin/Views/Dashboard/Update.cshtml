@model UpdateCartVM

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<div class="bg-primary h-100 py-5 w-100 d-flex flex-column justify-content-center align-items-center">
    <div>
        <form asp-area="Admin" asp-controller="Dashboard" asp-action="Update" enctype="multipart/form-data" method="post" class="bg-white p-4 rounded shadow mx-auto">
            <h4 class="mb-4 text-center"> UPDATE Form</h4>
            <div class="form-group col-md-6">
                <label for="Name">Speaker Name</label>
                <input asp-for="Name" class="form-control" id="Name" placeholder="Enter name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label for="Name">Specialty</label>
                <input asp-for="Specialty" class="form-control" id="Specialty" placeholder="Enter Specialty">
                <span asp-validation-for="Specialty" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label for="Name">Image</label>
                <input asp-for="File" class="form-control" id="Name" placeholder="upload IMAGE">
            </div>
            <button type="submit" class="btn btn-primary mt-3 btn-block">Submit</button>
        </form>
    </div>




    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</div>